<div class="container-xl py-4">
  <h4>All Users</h4>
  <% if @users.present? %>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Address</th>
            <th>Picture</th>
            <th>Fitness Certificate</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="align-middle"><%= user.first_name %></td>
              <td class="align-middle"><%= user.last_name %></td>
              <td class="align-middle"><%= user.email %></td>
              <td class="align-middle"><%= user.phone_number %></td>
              <td class="align-middle"><%= user.address %></td>
              <td class="align-middle"><img src="<%=  url_for(user.picture) %>" class="custom-image"  /></td>
              <td class="align-middle"><img src="<%=  url_for(user.fitness_certificate) %>" class="custom-image" /></td>
              <td class="align-middle">
                <% unless user.approved %>
                  <a href="<%= approve_user_path(user)%>" class="btn btn-primary" data-remote="true">Approve</a>
                <% else %>
                <a href="<%= reject_user_path(user)%>" class="btn btn-secondary" data-remote="true">Reject</a>
                <% end %>
              </td>
            </tr>
          <%end%>
        </tbody>
          
      </table>
    </div>
  <% else %>
    <div class="bg-white p-4 border rounded">No Users currently exists.</div>
  <% end %>
</div>