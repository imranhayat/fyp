<div class="min-vh-100-header d-flex align-items-center">
  <main class="border form-signin w-100 mx-auto my-3 p-4 bg-white rounded">
    <h2 class="h3 mb-3 fw-normal">Create New Lesson</h2>
    <%#= form_for do |f| %>

      <div class="mb-3">
        <%#= f.label :name, class:"form-label" %>
        <%#= f.text_field :name, class:"form-control", required: true %>
      </div>

      <div class="d-flex align-items-center gap-2">
        <%#= f.submit "Create", class:'btn btn-primary' %>
      </div>
      <div class="d-flex align-items-center gap-2">
        <a href="/schools/alllessons" class="btn btn-secondary">Back to all lessons</a>
      </div>
    <%# end %>
  </main>
</div>