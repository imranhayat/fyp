<div
  class="modal fade"
  id="createLessonModal"
  tabindex="-1"
  aria-labelledby="createLessonModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="createLessonModalLabel">
          Add a new lesson
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <%= form_with url: "/schools/createlesson/#{current_user.id}", method: :get, remote: true do |f| %>
        <div class="modal-body">
          <div class="d-flex align-items-center">
            <main class="border form-signin w-100 mx-auto my-3 p-4 bg-white rounded">
                <div class="mb-3">
                  <%= f.label :title, class:"form-label" %>
                  <%= f.text_field :title, class:"form-control", required: true %>
                </div> 
                <div class="mb-3">
                  <%= f.label :description, class:"form-label" %>
                  <%= f.text_area :description, class:"form-control" %>
                </div>

                <div class="mb-3">
                  <%= select_tag :instructor_id, options_for_select(User.instructor.pluck(:first_name, :id)) , include_blank: "Assign Instructor"  ,class: 'form-select mx-1 mx-sm-2 px-1 px-sm-3'%>
                </div>             
            </main>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <%= f.submit "Create", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>