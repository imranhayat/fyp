<div class="container-xl py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">All Lessons</h4>
    <a href="/schools/createlesson" class="btn btn-primary">Add New Lesson</a>
  </div>
  <%# if @lessons.present? %>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Lesson Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%# @lessons.each do |lesson| %>
        <tr>
          <td class="align-middle"><%#= lesson.name %></td>
          <td class="align-middle">
            <div class="d-flex align-items-center flex-wrap gap-2">
              <a
                href="<%#= edit_lesson_path(lesson)%>"
                class="btn btn-primary"
              >
                Edit
              </a>
              <a
                href="<%#= delete_lesson_path(lesson)%>"
                class="btn btn-danger"
              >
                Delete
              </a>
            </div>
          </td>
        </tr>
        <%#end%>
      </tbody>
    </table>
  </div>
  <%# else %>
  <div class="bg-white p-4 border rounded">No lesson currently exists.</div>
  <%# end %>
</div>
