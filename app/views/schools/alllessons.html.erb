<div class="container-xl py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h4 class="mb-0">All Lessons</h4>
    <a data-bs-toggle="modal" data-bs-target="#createLessonModal" class="btn btn-primary">Add New Lesson</a>
  </div>
  <% if @lessons.present? %>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Lesson Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @lessons.each do |lesson| %>
        <tr>
          <td class="align-middle"><%= lesson.title&.humanize %></td>
          <td class="align-middle">
            <div class="d-flex align-items-center flex-wrap gap-2">
              <a
                data-bs-toggle="modal" data-bs-target="#updateLessonModal"
                class="btn btn-primary"
              >
                Edit
              </a>
              <a
                href="<%= "/schools/delete_lesson/#{lesson.id}"%>"
                data-remote="true"
                class="btn btn-danger"
              >
                Delete
              </a>
            </div>
          </td>
        </tr>
        <%= render 'updatelesson', lesson: lesson %>
        <%end%>
      </tbody>
    </table>
  </div>
  <% else %>
  <div class="bg-white p-4 border rounded">No lesson currently exists.</div>
  <% end %>
</div>
<%= render 'createlesson' %>