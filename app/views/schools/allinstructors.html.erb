<div class="container-xl py-4">
  <h4>All Instructors</h4>
  <%# if @instructors.present? %>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone number</th>
          <th>Address</th>
          <th>Picture</th>
          <th>Fitness Certificate</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%# @instructors.each do |instructor| %>
          <tr>
            <td class="align-middle"><%#= instructor.first_name %></td>
            <td class="align-middle"><%#= instructor.last_name %></td>
            <td class="align-middle"><%#= instructor.email %></td>
            <td class="align-middle"><%#= instructor.phone_number %></td>
            <td class="align-middle"><%#= instructor.address %></td>
            <td class="align-middle"><img src="<%#=  url_for(instructor.picture) %>" class="custom-image"  /></td>
            <td class="align-middle"><img src="<%#=  url_for(instructor.fitness_certificate) %>" class="custom-image" /></td>
            <td class="align-middle">
              <%# unless instructor.approved %>
                <a href="<%#= approve_instructor_path(instructor)%>" class="btn btn-primary" data-remote="true">Approve</a>
              <%# else %>
              <a href="<%#= reject_instructor_path(instructor)%>" class="btn btn-secondary" data-remote="true">Reject</a>
              <%# end %>
            </td>
          </tr>
        <%#end%>
      </tbody>
        
    </table>
  </div>
  <%# else %>
    <div class="bg-white p-4 border rounded">No Instructors currently exists.</div>
  <%# end %>
</div>