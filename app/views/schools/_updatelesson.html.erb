<div
  class="modal fade"
  id="updateLessonModal"
  tabindex="-1"
  aria-labelledby="updateLessonModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="updateLessonModalLabel">
          Update lesson
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <%= form_with(url: "/schools/edit_lesson/#{lesson.id}", method: :post, class: "mw-700 mx-auto d-flex flex-column gap-3 mt-4") do |f| %>
        <div class="modal-body">
          <div class="d-flex align-items-center">
            <main class="border form-signin w-100 mx-auto my-3 p-4 bg-white rounded">
                <div class="mb-3">
                  <%= f.label :title, class:"form-label" %>
                  <%= f.text_field :title, class:"form-control", value: lesson.title, required: true %>
                </div> 
                <div class="mb-3">
                  <%= f.label :description, class:"form-label" %>
                  <%= f.text_area :description, class:"form-control", value: lesson.description %>
                </div>

                <div class="mb-3">
                  <%= select_tag :instructor_id, options_for_select(User.instructor.pluck(:first_name, :id), lesson.instructor_id), include_blank: "Assign Instructor", class: 'form-select mx-1 mx-sm-2 px-1 px-sm-3' %>
                </div>             
            </main>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <%= f.submit "Update", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>